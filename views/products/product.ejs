<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, maximum-scale=1.0, minimum-scale=1.0">
    <title>B1</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../../stylesheets/styles.css">
    <% if(user.admin) { %>
        <link rel="stylesheet" href="../../../stylesheets/adminresponsive.css">
    <% } else if(user.accountant) { %>
      <link rel="stylesheet" href="../../../stylesheets/accountantresponsive.css">
    <% } else if(user.accountantnotnal) { %>
        <link rel="stylesheet" href="../../../stylesheets/accountantnotnalresponsive.css">
    <% } else if(user.manager) { %>
        <link rel="stylesheet" href="../../../stylesheets/managerresponsive.css">
    <% } else { %>
    <link rel="stylesheet" href="../../../stylesheets/responsive.css">
    <% } %>
  </head>
  <body>
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="header__top--box">
                <!-- Logo -->
                <div class="top__box--logo">
                    <a href="/"><img class="top__box--loho-photo" src="../../../images/logo.png" alt=""></a>
                </div>
                <!-- Якщо не авторизований -->
                <div class="top__box--sign">
                    <% if(!user.id && !user.login) { %>
                    <ul class="sign__list">
                        <li class="sign__item"><a href="/sign_in" class="sign__link">Ввійти</a></li>
                        <li class="sign__item"><a href="/sign_up" class="sign__link">Реєстрація</a></li>
                    </ul>
                    <!-- Якщо авторизований -->
                    <% } else { %>
                    <div class="sign__list">
                      <div class="sign__user">
                          <div class="sign__user--icon show__table">
                              <img class="sign__user--photos" src="../../../images/user.jpg" alt="">
                          </div>
                          <!-- Меню користувача -->
                          <div class="sign__menu none">
                              <div class="sign__menu--point">
                                  <p class="sign__point--item"><%= user.login %></p>
                                  <p class="sign__point--item"><a href="/tables/my_tables" class="sign__poin--link">Таблиці</a></p>
                                  <% if(user.admin == true) { %>
                                  <p class="sign__point--item"><a href="/allusers" class="sign__poin--link">Всі користувачі</a></p>
                                  <% } %>
                                  <p class="sign__point--item"><a href="/api/auth/logout" class="sign__poin--link">Вихід</a></p>
                              </div>
                          </div>
                      </div>
                      <!-- Додавання нової головної таблиці -->
                      <% if(user.admin) { %>
                      <div class="sign__user sign__table">
                          <div class="sign__table--icon show__table">
                              <i class="fas fa-plus sign__user--photo"></i>
                          </div>
                          <div class="sign__menu sign__table--menu none">
                              <div class="sign__menu--point sign__table--point">
                                  <p class="sign__point--item"><a href="/post/add" class="sign__poin--link">Нова головна таблиця</a></p>
                              </div>
                          </div>
                      </div>
                      <% } %>
                  </div>
                  <% } %>
  
                </div>
            </div>
        </div>
    </div>
    <div class="header__menu">
        <div class="container">
            <nav class="nav header__nav">
                <div class="nav__btn">
                    <button data-target="#nav-main" type="button" class="btn-nav">
                      <span class="btn-nav__line"></span>
                      <span class="btn-nav__line"></span>
                      <span class="btn-nav__line"></span>
                    </button>
                  </div>
                <ul class="nav__list" id="nav-main">
                    <li class="nav__item"><a href="/" class="nav__link">На головну</a></li>
                    <li class="nav__item"><a href="/tables/my_tables" class="nav__link">Міста</a></li>
                    <% if(user.admin) { %>
                    <li class="nav__item"><a href="/post/add" class="nav__link">Створити місто</a></li>
                    <li class="nav__item"><a href="/allusers" class="nav__link">Всі користувачі</a></li>
                    <li class="nav__item"><a href="/clientborgs" class="nav__link">Борги клієнтів</a></li>
                    <li class="nav__item"><a href="/moneys" class="nav__link">Оплати</a></li>
                    <% } %>
                    <% if(user.admin || user.accountantnotnal || user.accountant || user.logist) { %>
                    <li class="nav__item"><a href="/allselers" class="nav__link">Всі продажі</a></li>
                    <% } %>
                    <% if(user.manager) { %>
                    <li class="nav__item"><a href="/mypays" class="nav__link">Мої оплати</a></li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</header>
<main class="main table">
    <section class="client-info">
        <div class="container">
            <h2 class="client-info__client-name" id="<%=client.id %>">Ім'я клієнта: <%=client.headline %></h2>
         <div class="client-info__create" id="<%=user.id %>">
             <form action="" class="client-info__createss">
                 <div class="client-info__box">
                     <% if(user.logist || user.admin) { %>
                     <div class="client-info__item"><input id="client-info__order" class="client-info__input" type="text" placeholder="№ замовлення"></div>
                     <div class="client-info__item"><input id="client-info__firms" class="client-info__input" type="text" placeholder="Фірма"></div>
                     <% } %>
                     <% if(user.admin || user.logist || user.manager || user.accountantnotnal || user.accountant) { %>
                     <div class="client-info__item"><input id="client-info__datal" class="client-info__input" type="text" placeholder="Дата"></div>
                     <% } %>
                     <% if(user.admin || user.logist) { %>
                     <div class="client-info__item"><input id="client-info__name" class="client-info__input" type="text" placeholder="Назва товару"></div>
                     <% } %>
                     <% if (user.accountantnotnal || user.accountant) { %>
                    <div class="client-info__item"><input id="client-info__name" class="client-info__input" type="text" placeholder="Операція" value="Оплата"></div>
                    <% } %>
                     <% if(user.logist || user.admin) { %>
                     <div class="client-info__item"><input id="client-info__opt" class="client-info__input" type="text" placeholder="Оптова ціна"></div>
                     <div class="client-info__item"><input id="client-info__number" class="client-info__input" type="text" placeholder="Кількість"></div>
                     <div class="client-info__item"><input id="client-info__delivery" class="client-info__input" type="text" placeholder="Доставка (самовивіз)"></div>
                     <div class="client-info__item"><input id="client-info__deliverynotnal" class="client-info__input" type="text" placeholder="Доставка по безналу"></div>
                     <div class="client-info__item"><input  class="button client-info__button" type="submit" value="Створити"></div>
                     <% } %>
                     <% if(user.admin || user.manager || user.accountant) { %>
                        <div class="client-info__item"><input id="client-info__nal" class="client-info__input" type="text" placeholder="Сума налічки"></div>
                    <% } %>
                    <% if(user.admin || user.accountantnotnal) { %>
                        <div class="client-info__item"><input id="client-info__notnal" class="client-info__input" type="text" placeholder="Сума безнал"></div>
                    <% } %>
                    <% if(user.manager) { %>
                        <div class="client-info__item"><input  class="button client-info__oplata" type="submit" value="Створити"></div>
                     <% } %>
                     <% if(user.accountant) { %>
                        <div class="client-info__item"><input  class="button client-info__oplatanal" type="submit" value="Створити"></div>
                     <% } %>
                     <% if(user.accountantnotnal) { %>
                        <div class="client-info__item"><input  class="button client-info__oplatanotnal" type="submit" value="Створити"></div>
                     <% } %>
                     <% if(user.admin) { %>
                        <div class="client-info__item"><input  class="button client-info__oplata-adm" type="submit" value="Створити"></div>
                     <% } %>
                 </div>
             </form>
         </div>
        </div>
    </section>
    <section class="client-pith">
        <div class="container">
            <% if(user.admin || user.manager) { %>
            <div class="client-pith__href">
                <a href="/clientpiths/<%= client.id %>" class="client-pith__link">Перейти до залишків</a>
            </div>
            <% } %>
        </div>
    </section>
    <section class="client-product">
